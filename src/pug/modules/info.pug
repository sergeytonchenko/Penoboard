          a.info-telephone__link(href="tel:+38(0552)314-410") тел:+38(0552)314-410,
          a.info-telephone__link(href="tel:+38(0552)314-403") &nbsp;314-403;
          a.info-telephone__link(href="fax:+38(0552)359-214") &nbsp;факс:+38(0552)359-214
