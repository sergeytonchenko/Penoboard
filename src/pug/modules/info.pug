    .info-container.view-port      
      .info-container--left
        img(src="../img/header_logo.png", alt="header_logo")
        .info-login
          a(href="").info-login__link Вход
          span /
          a(href="").info-login__link Регистрация      
      .info-container--right
        .info-box
          select(name="dropdown").info-lang
            option(selected="selected" value="") RU
            option(value="") EN
            option(value="") UA
          .info-social
            p.info-social__text Мы в социальных сетях
