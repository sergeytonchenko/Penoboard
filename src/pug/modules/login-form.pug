.form-login
  .form-close
    span.iconify(data-icon='carbon:close-outline' data-inline='false')
  form#login.form-block(action="" method="post")
    p.form__title Войти в личный кабинет
    p Ваш e-mail
    input(type="email", id="user_email" name="user_email" placeholder="user@mail.com")
    p Пароль
    input(type="password", id="psword" name="psword" placeholder="********")
    input.form__submit.submit(type="submit", value="Войти")

.form-reg
  .reg-close
    span.iconify(data-icon='carbon:close-outline' data-inline='false')
  form#reg.form-block(action="" method="post")
    p.form__title Регистрация
    p Введите логин
    input(type="text", name="name" placeholder="user")
    p Введите e-mail
    input(type="email", name="user_email" placeholder="user@mail.com")
    p Введите пароль
    input(type="password", id="password" name="password" placeholder="********")
    p Подтвердите пароль
    input(type="password", name="conf_password" placeholder="********")
    input.reg__submit.submit(type="submit", value="Зарегистрироваться")